mixin navbar_item(link, icon)
  - var isActive = req.originalUrl.match('^' + req.baseUrl + link)
  li(class=isActive ? 'active' : '')
    a(href="#{req.baseUrl}#{link}")
      i(class='fa fa-#{icon}')
      span
        block

doctype html
